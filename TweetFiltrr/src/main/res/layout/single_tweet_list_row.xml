<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#cc000000"
                android:descendantFocusability="beforeDescendants"
                android:focusable="true"
                android:focusableInTouchMode="true" >


    <LinearLayout
                  android:id="@+id/tweet_buttons"
                  android:orientation="horizontal"
                  android:background="#cc000000"
                  android:layout_width="match_parent"
                  android:layout_marginBottom="10dp"
                  android:layout_height="wrap_content">


        <ImageButton
                android:id="@+id/reply_but"
                android:text="copy"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:background="#4e4d4d"
                android:src="@drawable/reply_32"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

        <ImageButton
                android:id="@+id/retweet_but"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/retweet_32"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

        <ImageButton
                android:id="@+id/favourite_but"
                android:src="@drawable/fav_32"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:background="@null"
                android:scaleType="centerInside"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

        <ImageButton
                android:id="@+id/copy_tweet_but"
                android:text="copy"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:background="@null"
                android:src="@drawable/quote_32"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

    </LinearLayout>

            <TextView
                    android:id="@+id/friend_name"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:layout_below="@id/tweet_buttons"

                    android:textColor="#F0F0F0"
                    android:textSize="14sp"
                    android:layout_margin="3dip"
                    android:textStyle="bold"/>



            <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:adjustViewBounds="true"
                    android:layout_below="@id/friend_name"
                    android:clickable="false"
                    android:layout_marginLeft="3dip"
                    android:focusable="false"
                    android:scaleType="centerCrop"/>

            <TextView
                    android:id="@+id/timeline_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignTop="@id/friend_name"
                    android:layout_alignParentRight="true"
                    android:padding="5dp"
                    android:layout_margin="3dip"
                    android:background="#00000000"
                    android:textColor="#F0F0F0"
                    android:textSize="12sp"
                    />


            <TextView
                    android:id="@+id/timeline_entry"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dip"
                    android:layout_toRightOf="@id/profile_image"
                    android:padding="5dp"
                    android:background="#00000000"
                    android:layout_below="@id/timeline_date_time"
                    android:textColor="#F0F0F0"
                    android:textSize="20sp"/>


            <EditText
                    android:id="@+id/tweet_edit_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/timeline_entry"
                    />



</RelativeLayout>

