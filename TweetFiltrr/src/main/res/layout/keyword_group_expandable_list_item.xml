    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/remove_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/standardbutton"
                android:text="Remove friends"
                android:textSize="10dp" />

            <Button
                android:id="@+id/add_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/standardbutton"
                android:text="Add friends"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/selected_friends"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/friends_to_remove"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="0dp"
                android:background="@drawable/removefriend2"
                android:padding="0dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/friends_to_add"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/addfriend2"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>